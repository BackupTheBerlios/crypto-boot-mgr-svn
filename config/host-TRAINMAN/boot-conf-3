BOOT_TYPE=LINUX
BOOT_LOADER=GRUB
BOOT_TITLE="Linux old-kernel non-SMP USB"
#
# Boot from USB partition 2: (hd0,1) at this point
#   because of BIOS device renumbering during USB boot
#
NUM_BOOT_LINES=1
BOOT_LINE_1="   root (hd0,1)"
KERNEL_OPTIONS="ro root=/dev/VolGroup00/LogVol00 rhgb quiet"
KERNEL_SMP=0
KERNEL_INITRD_DIR="imgdir-TRAINMAN-old"
KEY_DIR="host-TRAINMAN/keys-1"
INITSCRIPT="host-TRAINMAN/init"
INITCONF="host-TRAINMAN/init.conf"
